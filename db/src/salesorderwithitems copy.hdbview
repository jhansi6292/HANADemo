VIEW "SALESORDERSWITHITEMS" AS 
  SELECT 
    "HDR"."ID",
    "HDR"."DESCRIPTION",
    "HDR"."ORDERDATE",
    "ITEM"."ITEM",
    "ITEM"."MATERIAL",
    "ITEM"."QUANTITY",
    CASE
      WHEN "ITEM".Quantity <= 10 THEN 'Too Low'
      WHEN "ITEM".Quantity <= 100 THEN 'OK'
      WHEN "ITEM".Quantity > 100 THEN 'High'
    END AS COMMENT
  FROM "SALESORDER" AS "HDR"
  LEFT OUTER JOIN "SALESORDERITEM" AS "ITEM"
    ON "HDR".ID = "ITEM".ID