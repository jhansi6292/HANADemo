VIEW "SalesOrderWithCustomer" AS 
  SELECT 
    "HDR"."ID",
    "HDR"."DESCRIPTION",
    "HDR"."ORDERDATE",
    "HDR"."CUSTOMERNO",
    "CUST"."FIRSTNAME",
    "CUST"."LASTNAME",
    "CUST"."FIRSTNAME"||' '||"CUST"."LASTNAME" AS "CUSTOMER_FULL_NAME"
  FROM "SALESORDER" AS "HDR"
  LEFT OUTER JOIN "syn_customer" AS "CUST"
    ON "HDR".CUSTOMERNO = "CUST".CUSTOMERNO